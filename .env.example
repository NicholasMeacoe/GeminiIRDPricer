# Environment variables for Gemini IRD Pricer (FastAPI)
# Copy this file to .env and adjust values for your environment. Do NOT commit the .env file.

# Environment name: development or production
ENV=development

# Enable HTTP Basic authentication for POST endpoints (true/false)
ENABLE_AUTH=false

# Credentials for Basic Auth (only used when ENABLE_AUTH=true or ENV=production)
BASIC_AUTH_USER=change_me_user
BASIC_AUTH_PASS=change_me_password

# Per-IP rate limit for API requests (requests per minute). Set to 0 to disable.
RATE_LIMIT_PER_MIN=60
